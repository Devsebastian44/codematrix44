// En tu componente Astro (.astro)
import { getCollection } from 'astro:content';

// Obtener todos los posts del blog
const posts = await getCollection('blog');

// Agrupar posts por categoría
const categorias = posts.reduce((acc, post) => {
    const categoria = post.data.category || 'Sin categoría';
    
    if (!acc[categoria]) {
        acc[categoria] = [];
    }
    
    acc[categoria].push({
        titulo: post.data.title,
        slug: post.slug,
        url: `/blog/${post.slug}`
    });
    
    return acc;
}, {});

// Convertir a array y ordenar
const categoriasArray = Object.entries(categorias).map(([nombre, posts]) => ({
    nombre,
    posts
}));
