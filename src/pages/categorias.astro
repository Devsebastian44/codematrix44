}
console.log('=======================');

// Agrupar posts por categor√≠a
const categorias = posts.reduce((acc, post) => {
    const categoria = post.data.category || 'Sin categor√≠a';
    
    if (!acc[categoria]) {
        acc[categoria] = [];
    }
    
    // ‚úÖ USAR post.id en lugar de post.slug
    acc[categoria].push({
        titulo: post.data.title,
        slug: post.id,  // ‚ö†Ô∏è CAMBIO CR√çTICO: usar post.id
        url: `/blog/${post.id}`  // ‚ö†Ô∏è CAMBIO CR√çTICO: usar post.id
    });
    
    return acc;
}, {});

// Convertir a array y ordenar
const categoriasArray = Object.entries(categorias).map(([nombre, posts]) => ({
    nombre,
    posts
}));

// Preparar datos para JavaScript (para la b√∫squeda)
const allPostsData = posts.map(post => ({
    slug: post.id,  // ‚ö†Ô∏è IMPORTANTE: usar post.id
