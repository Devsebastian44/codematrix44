---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---


<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- SEO Básico -->
<title>CodeMatrix44 | Programación, Ciberseguridad & IA</title>
<meta name="description" content="CodeMatrix44 es un blog sobre Programación, Ciberseguridad, Ethical Hacking, Ciencia de Datos e Inteligencia Artificial. Tutoriales, herramientas y análisis técnicos.">
<meta name="keywords" content="programación, desarrollo de software, ciberseguridad, hacking ético, pentesting, análisis de malware, data science, machine learning, inteligencia artificial, python, sql, redes">
<meta name="author" content="devsebastian44">

<!-- Favicon -->
<link rel="icon" href="/Icono.ico" type="image/x-icon">

<!-- URL Canónica -->
<link rel="canonical" href="https://codematrix44.vercel.app/">

<!-- Open Graph (Redes Sociales) -->
<meta property="og:title" content="CodeMatrix44 | Programación, Ciberseguridad & IA">
<meta property="og:description" content="Explora contenido sobre Programación, Ciberseguridad, Ciencia de Datos e Inteligencia Artificial en CodeMatrix44.">
<meta property="og:url" content="https://codematrix44.vercel.app/">
<meta property="og:type" content="website">
<meta property="og:image" content="https://codematrix44.vercel.app/og-image.png">

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="CodeMatrix44 | Programación, Ciberseguridad & IA">
<meta name="twitter:description" content="Blog técnico sobre Programación, Ciberseguridad, Ciencia de Datos e Inteligencia Artificial.">
<meta name="twitter:image" content="https://codematrix44.vercel.app/og-image.png">

<!-- CSS -->
<link rel="stylesheet" href="/CSS/normalize.css">
<link rel="stylesheet" href="/CSS/estilo.css">
<link rel="stylesheet" href="/CSS/media.css">

<!-- Librerías -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto+Condensed:wght@100..900&display=swap" rel="stylesheet">

    <title>CodeMatrix44</title>
</head>
<body>

    <nav class="nav">
        <ul class="nav__ul">
            <li class="nav__li"><a href="/blog"><i class="fas fa-home"></i> Home</a></li>
            <li class="nav__li"><a href="/categories"><i class="fa fa-list"></i> Categories</a></li>
        </ul>

        <div class="nav__right">
            <button class="nav__responsive-buttom" onclick="toggleMenu()">☰</button>
            <div class="search-container">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" id="search-bar" class="search-bar" placeholder="Search">
                <ul id="suggestions" class="suggestions-list"></ul>
            </div>
        </div>
    </nav>

    <!-- Menú móvil -->
    <ul class="nav__responsive-ul">
        <li><a href="/blog"><i class="fas fa-home"></i> Home</a></li>
        <li><a href="/categories"><i class="fa fa-list"></i> Categories</a></li>
    </ul>

    <div id="particles-js">
        <div class="container-subtitulo">
            <div class="subtitulo">CodeMatrix44</div>
            <div class="blog">Blog Personal</div>
        </div>
    </div>

    <div class="container">
        <!-- Sidebar contenedor para Perfil y Tags -->
        <div class="sidebar">
            <div class="Perfil">
                <div class="Foto">
                    <img src="https://avatars.githubusercontent.com/u/146502229?v=4" alt="bl4ck44">
                </div>

                <div class="info">
                    <h2>devsebastian44</h2>
                    <p>
                        Software Developer <br>
                        Cybersecurity Analyst <br>
                        Data Science and AI Student
                    </p>
                </div>

                <div class="Social">
                    <!-- GitHub -->
                    <a href="https://github.com/devsebastian44" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                        <i class="fa-brands fa-github"></i>
                    </a>

                    <!-- X (Twitter) -->
                    <a href="https://x.com/devsebastian44/" target="_blank" rel="noopener noreferrer" aria-label="Twitter/X">
                        <i class="devicon-twitter-original"></i>
                    </a>

                    <!-- TikTok -->
                    <a href="https://www.tiktok.com/@devsebastian44" target="_blank" rel="noopener noreferrer" aria-label="TikTok">
                        <i class="fa-brands fa-tiktok"></i>
                    </a>

                    <!-- Instagram -->
                    <a href="https://www.instagram.com/devsebastian44/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
                        <i class="fa-brands fa-instagram"></i>
                    </a>
                </div>
            </div>

            <!-- Card de Tags -->
            <div class="tags-card">
                <h3 class="tags-title">
                    <i class="fa-solid fa-tags"></i> Tags
                </h3>
                <div class="tags-container">
                    <a href="/tags/programacion" class="tag">Programación</a>
                    <a href="/tags/ciberseguridad" class="tag">Ciberseguridad</a>
                    <a href="/tags/python" class="tag">Python</a>
                    <a href="/tags/ia" class="tag">IA</a>
                    <a href="/tags/data-science" class="tag">Data Science</a>
                    <a href="/tags/hacking" class="tag">Hacking</a>
                    <a href="/tags/redes" class="tag">Redes</a>
                    <a href="/tags/sql" class="tag">SQL</a>
                </div>
            </div>
        </div>

        <div class="Home">
{posts.map(post => (
  <div class="item">
    <img
      src={post.data.image}
      class="Logo"
      width="370"
      height="200"
      style="float:right;"
      alt={post.data.title}
    />

    <div class="item-texto">
      <a href={`/blog/${post.slug}`} class="link">
        <h2>{post.data.title}</h2>
      </a>

      <i class="fa-solid fa-folder"></i> {post.data.category}

      <p>{post.data.description}</p>
    </div>
  </div>
))}
        </div>
    </div>

    <!-- Formulario -->
    <div class="form">
        <div class="login-box">
            <p>Contáctame</p>
            <form id="contact-form" action="https://formspree.io/f/xovgkzrb" method="POST">
                <div class="user-box">
                    <input required name="name" type="text">
                    <label>Nombre</label>
                </div>
                <div class="user-box">
                    <input required name="email" type="email">
                    <label>Correo</label>
                </div>
                <div class="user-box">
                    <textarea required name="message"></textarea>
                    <label>Mensaje</label>
                </div>

                <button type="submit">
                    <span></span><span></span><span></span><span></span>
                    Enviar
                </button>
            </form>

            <div id="form-message" class="hidden"></div>
        </div>
    </div>

    <span class="copyright">Copyright© 2024 | Todos los derechos reservados | devsebastian44</span>

    <!-- JS -->
    <script src="/JS/script.js" is:inline></script>
    <script src="https://unpkg.com/@splinetool/viewer@1.9.82/build/spline-viewer.js" type="module" is:inline></script>
    <script src="/JS/particles.min.js" is:inline></script>
    <script src="/JS/app.js" is:inline></script>

</body>
</html>