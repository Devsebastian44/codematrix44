---
import "../Styles/normalize.css";
import "../Styles/estilo.css";
import "../Styles/media.css";

import { getCollection } from 'astro:content';

// Obtener todos los posts y eliminar duplicados por id
const allPosts = await getCollection('blog');

// Eliminar duplicados basándose en el id (antes era slug)
const uniquePosts = allPosts.filter((post, index, self) =>
    index === self.findIndex((p) => p.id === post.id)  // ⚠️ Cambió: post.slug → post.id
);

// Ordenar por fecha de publicación (más recientes primero)
const posts = uniquePosts.sort((a, b) => {
    const dateA = new Date(a.data.pubDate || a.data.date || '2000-01-01');
    const dateB = new Date(b.data.pubDate || b.data.date || '2000-01-01');
    return dateB.getTime() - dateA.getTime();
});

const postsPerPage = 5;
const totalPages = Math.ceil(posts.length / postsPerPage);

// Pasar todos los posts al cliente para manejar la paginación con JS
const allPostsData = posts.map(post => ({
    slug: post.id,  // ⚠️ Cambió: post.slug → post.id
    title: post.data.title,
    description: post.data.description,
    category: post.data.category,
    image: post.data.image,
    tags: post.data.tags || [],
    pubDate: post.data.pubDate || post.data.date
}));
