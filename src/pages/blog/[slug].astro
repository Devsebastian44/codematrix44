---
import { getCollection, render } from 'astro:content';
import ArticleLayout from '../../layouts/ArticleLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },  // ⚠️ Cambió: post.slug → post.id
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);  // ⚠️ Cambió: post.render() → render(post)
---

<ArticleLayout post={post}>
  <article style="max-width:800px;margin:auto;padding:40px;">
    <h1>{post.data.title}</h1>
    <img src={post.data.image} style="max-width:100%;border-radius:12px;margin:20px 0;" alt={post.data.title} />
    <Content />
  </article>
</ArticleLayout>